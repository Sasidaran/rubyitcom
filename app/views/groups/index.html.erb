<h1>Listing groups</h1>

<table class='table table-striped table-bordered table-hover'>
  <tr>
    <th>Name</th>
    <th>Status</th>
    <th>Applications</th>
    <th>Action</th>
    
  </tr>

<% @groups.each do |group| %>
  <tr>
    <td><%= link_to group.name, group %></td>
    <td><%= group.status %></td>
    <td><%= group.applications.pluck(:name).to_sentence %></td>
    <td><%= link_to 'Edit', edit_group_path(group) %>
    <%= link_to 'Destroy', group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
<div class="row">
  <%= will_paginate @groups, renderer: BootstrapPagination::Rails %>
</div>
<br />

<%= link_to 'New Group', new_group_path %>
