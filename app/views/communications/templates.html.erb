<h1>Listing Templates</h1>

<table class='table table-striped table-bordered table-hover'>
  <tr>
    <th>Title</th>
    <th>Sub title</th>
    <th>Description</th>
    <th>Save as template</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @templates.each do |template| %>
  <tr>
    <td><%= template.title %></td>
    <td><%= template.sub_title %></td>
    <td><%= template.description %></td>
    
    <td><%= link_to 'Show', template %></td>
    <td><%= link_to 'Edit', edit_communication_path(template) %></td>
    <td><%= link_to 'Destroy', template, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />
<div class="row">
  <%= will_paginate @templates, renderer: BootstrapPagination::Rails %>
</div>
<%= link_to 'New Template', new_communication_path %>


