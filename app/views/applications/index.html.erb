<h1>Listing applications</h1>

<table class='table table-striped table-bordered table-hover'>

  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Status</th>
    <th>Group</th>
    <th>Action</th>
    
  </tr>

<% @applications.each do |application| %>
  <tr>
    <td><%= application.name %></td>
    <td><%= application.description %></td>
    <td><%= application.status %></td>
    <td><%= application.groups.pluck(:name).to_sentence %></td>
    
    <td>
      <%= link_to 'Edit', edit_application_path(application) %>
      <%= link_to 'Destroy', application, method: :delete, data: { confirm: 'Are you sure?' } %>

      <span class="js_subscribe_application_<%= application.id %>">
        <%= render 'applications/subscribe_application', application: application  %>
      </span>
    </td>
  </tr>
<% end %>
</table>
<div class="row">
  <%= will_paginate @applications, renderer: BootstrapPagination::Rails %>
</div>


<%= link_to 'New Application', new_application_path %>
